@model BookReadingEventManagement2.Models.EventListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>My Events</h2>

<p>
    @Html.ActionLink("Create New", "Created")
</p>
<h3>Upcoming Events</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Time")
        </th>
        <th>
            @Html.DisplayName("Created By")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.UpcomingEvents)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.StartDate))
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.StartTime.TimeOfDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserFullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
            @Html.ActionLink("Details", "Details", new { id = item.EventID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
        </td>
    </tr>
    }

</table>

<h3>Past Events</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Date")
        </th>
        <th>
            @Html.DisplayName("Time")
        </th>
        <th>
            @Html.DisplayName("Created By")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PastEvents)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.StartDate))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime.TimeOfDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserFullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EventID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
            </td>
        </tr>
    }

</table>

